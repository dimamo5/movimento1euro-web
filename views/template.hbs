{{> header}}

<body>

<div id="wrapper">
    {{> navbar templatesPage=templatesPage }}

    <div id="page-wrapper">

        <div class="container-fluid" id="table">
            <!-- Page Heading -->
            <div class="row header-page">
                <h1 class="col-lg-6">
                    Templates de Notificações
                </h1>
                <div class="col-lg-6 text-right crud">
                    <button v-on:click="openCreateTemplate" type="button" class="btn btn-default" data-target="#templateCreateModal">Criar</button>
                    <button v-on:click="openEditTemplate" type="button" class="btn btn-default" data-target="#templateEditModal">Editar</button>
                    <button v-on:click="remove" type="button" class="btn btn-default">Remover</button>
                </div>
            </div>

            <!-- /.row -->
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>
                        <div class="checkboxForAll">
                            <label class="col-md-2">
                                <input v-model="checkAll" type="checkbox" name="check">
                            </label>
                        </div>
                    </th>
                    <th>Nome</th>
                    <th>Conteúdo</th>
                </tr>
                </thead>
                <tbody>
                    <tr v-for="template in templates">
                        <td class="checkboxForAll">
                            <label class="col-md-2">
                                <input type="checkbox" name="check" v-on:click="upDateCounter(template.select)" v-model="template.select">
                            </label>
                        </td>
                        <td>\{{template.name}}</td>
                        <td>\{{template.content}}</td>
                    </tr>
                </tbody>
            </table>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>

{{> templateModal}}

{{> footer }}