{{> header}}

<body>

<div id="wrapper">
    {{> navbar templatesPage=templatesPage }}

    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row header-page">
                <h1 class="col-lg-6">
                    Templates de Notificações
                </h1>
                <div class="col-lg-6 text-right crud">
                    <button type="button" class="btn btn-default">Criar</button>
                    <button type="button" class="btn btn-default">Editar</button>
                    <button type="button" class="btn btn-default">Remover</button>
                </div>
            </div>
            <!-- /.row -->
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>
                        <div class="checkboxForAll" v-if="checked">
                            <label class="col-md-2">
                                <input type="checkbox" name="check">
                            </label>
                        </div>
                    </th>
                    <th>Nome</th>
                    <th>Conteúdo</th>
                </tr>
                </thead>
                <tbody>
                {{#each templates}}
                    <tr>
                        <td>
                            <div class="checkbox" v-if="checked">
                                <label class="col-md-2" >
                                    <input type="checkbox" name="check">
                                </label>
                            </div>
                        </td>
                        <td>{{name}}</td>
                        <td>{{content}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>

{{> footer }}