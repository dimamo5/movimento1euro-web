{{> header}}

<body>

<div id="wrapper">
    {{> navbar templatesPage=templatesPage }}

    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Templates de Notificações
                    </h1>
                </div>
            </div>
            <!-- /.row -->
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>
                        <div class="checkbox">
                            <label class="col-md-2">
                                <input type="checkbox" name="check">
                            </label>
                        </div>
                    </th>
                    <th>Nome</th>
                    <th>Conteúdo</th>
                </tr>
                </thead>
                {{#with templates}}
                    {{#each templates}}
                    <tbody>
                    <tr>
                        <td>
                            <div class="checkbox">
                                <label class="col-md-2">
                                    <input type="checkbox" name="check">
                                </label>
                            </div>
                        </td>
                        <td>{{name}}</td>
                        <td>{{content}}</td>
                    </tr>
                    </tbody>
                    {{/each}}
                {{/with}}
            </table>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>

{{> footer }}