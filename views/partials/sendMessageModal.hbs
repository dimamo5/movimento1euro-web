<div id="notificationSendModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Enviar notificação</h4>
            </div>

            <div class="modal-body">
                <div class="form-group">
                        <label for="tipoMsg"> Tipo de mensagem: </label> <br>
                        <input type="radio" value="manual" v-model="cenas"> Manual <br>
                        <input type="radio" value="template" v-model="cenas" > Template <br>
                </div>

                <div id="templateList" class="form-group" style="display:none">
                    <label for="templateList"> Escolha um template: </label>
                    <select title="templateList">
                        <option v-for="template in templates">\{{template.name}}</option>
                    </select>
                </div>


                <div id="contentManualMsg" class="form-group" style="display:none">
                    <label for="contentTemplate">Escreva a sua mensagem:</label>
                    <textarea v-model="content" rows="4" cols="50" id="content" name="content" class="form-control"></textarea>
                </div>
                <div class="form-group">

                </div>
            </div>
            <div class="modal-footer"> <!-- TODO ADD COMPLETE v-on:click -->
                <button v-on:click="" type="button" class="btn btn-default" data-dismiss="modal">
                    Enviar
                </button>
            </div>
        </div>

    </div>
</div>